const { app, BrowserWindow, ipcMain, dialog } = require('electron');
const path = require('path');
const XLSX = require('xlsx'); // Import thÆ° viá»‡n XLSX
const fs = require('fs');
const bcrypt = require('bcrypt');

let mainWindow;
let historyStack = []; // LÆ°u lá»‹ch sá»­ trang

app.whenReady().then(() => {
    mainWindow = new BrowserWindow({
        width: 1400,
        height: 1000,
        // fullscreen: true,
        webPreferences: {
            nodeIntegration: true,
            contextIsolation: false
        }
    });
    mainWindow.loadFile("views/login.html");
    mainWindow.maximize();
    // LÆ°u trang vÃ o lá»‹ch sá»­ khi chuyá»ƒn trang
    function navigateTo(filePath) {
        historyStack.push(filePath);
        mainWindow.loadFile(filePath);
    }
    // Xá»­ lÃ½ Ä‘Äƒng nháº­p
    ipcMain.on("login-attempt", (event, { username, password }) => {
        try {
            const filePath = path.join(__dirname, "data/user.json");
            const rawData = fs.readFileSync(filePath, "utf-8");
            const users = JSON.parse(rawData);
    
            if (!Array.isArray(users)) {
                throw new Error("Dá»¯ liá»‡u user.json khÃ´ng há»£p lá»‡!");
            }
    
            // TÃ¬m user theo username
            const user = users.find(user => user.username === username);
    
            if (!user) {
                event.reply("login-response", { success: false, message: "TÃ i khoáº£n khÃ´ng tá»“n táº¡i!" });
                return;
            }
    
            // Kiá»ƒm tra máº­t kháº©u vá»›i bcrypt
            if (!bcrypt.compareSync(password, user.password)) {
                event.reply("login-response", { success: false, message: "Sai máº­t kháº©u!" });
                return;
            }
    
            // ÄÄƒng nháº­p thÃ nh cÃ´ng
            event.reply("login-response", { success: true, user: user });
    
        } catch (error) {
            console.error("Lá»—i khi Ä‘á»c user.json:", error);
            event.reply("login-response", { success: false, message: "Lá»—i há»‡ thá»‘ng, vui lÃ²ng thá»­ láº¡i!" });
        }
    });
    ipcMain.on("open-main", () => navigateTo("views/main.html"));
    ipcMain.on("back-to-main", () => navigateTo("views/main.html"));
    ipcMain.on("open-list", () => navigateTo("views/criminals/list.html"));
    ipcMain.on("open-create", () => navigateTo("views/criminals/create.html"));
    ipcMain.on("open-filter-export-excel", () => navigateTo("views/criminals/filter-export-excel.html"));

    ipcMain.on('open-edit', (event, item) => {
        navigateTo("views/criminals/edit.html");
        mainWindow.webContents.once('did-finish-load', () => {
            mainWindow.webContents.send('edit-item', item);
        });
    });

    ipcMain.on('open-detail', (event, item) => {
        navigateTo("views/criminals/detail.html");
        mainWindow.webContents.once('did-finish-load', () => {
            mainWindow.webContents.send('load-detail', item);
        });
    });
    ipcMain.on('open-report', (event, item) => {
        navigateTo("views/report.html");
        mainWindow.webContents.once('did-finish-load', () => {
            mainWindow.webContents.send('user-report', item);
        });
    });
    // router report
    ipcMain.on("report-list", () => navigateTo("views/report/list.html"));
    ipcMain.on("report-create", () => navigateTo("views/report/create.html"));
    ipcMain.on("report-edit", (event, item) => {
        navigateTo("views/report/edit.html");
        mainWindow.webContents.once('did-finish-load', () => {
            mainWindow.webContents.send('edit-report-data', item);
        });
    });
    ipcMain.on("report-detail", (event, item) => {
        navigateTo("views/report/detail.html");
        mainWindow.webContents.once('did-finish-load', () => {
            mainWindow.webContents.send('view-report-data', item);
        });
    });
    // end router report

    ipcMain.on("open-change-password", () => navigateTo("views/change-password.html"));
    ipcMain.on('export-excel', (event, data) => {
        try {
            // Chuyá»ƒn data JSON thÃ nh worksheet
            const worksheet = XLSX.utils.json_to_sheet(data);
            const workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Danh sÃ¡ch');

            // Hiá»ƒn thá»‹ há»™p thoáº¡i Ä‘á»ƒ chá»n nÆ¡i lÆ°u file
            dialog.showSaveDialog({
                title: 'LÆ°u file Excel',
                defaultPath: path.join(app.getPath('desktop'), 'data.xlsx'),
                filters: [{ name: 'Excel Files', extensions: ['xlsx'] }]
            }).then((file) => {
                if (!file.canceled) {
                    XLSX.writeFile(workbook, file.filePath);
                    event.sender.send('export-success', 'Xuáº¥t Excel thÃ nh cÃ´ng!');
                }
            }).catch((err) => {
                console.error('Lá»—i khi lÆ°u file:', err);
                event.sender.send('export-failed', 'Xuáº¥t Excel tháº¥t báº¡i!');
            });
        } catch (error) {
            console.error('Lá»—i khi xuáº¥t Excel:', error);
            event.sender.send('export-failed', 'Xuáº¥t Excel tháº¥t báº¡i!');
        }
    });

    ipcMain.on('import-excel', (event) => {
        dialog.showOpenDialog({
            title: 'Chá»n file Excel',
            filters: [{ name: 'Excel Files', extensions: ['xlsx', 'xls'] }],
            properties: ['openFile']
        }).then((file) => {
            if (!file.canceled) {
                const workbook = XLSX.readFile(file.filePaths[0]);
                const sheetName = workbook.SheetNames[0];
                const data = XLSX.utils.sheet_to_json(workbook.Sheets[sheetName]);
                event.sender.send('import-success', data);
            }
        }).catch((err) => {
            console.error('Lá»—i khi nháº­p file:', err);
            event.sender.send('import-failed', 'Nháº­p Excel tháº¥t báº¡i!');
        });
    });
    // ðŸ“Œ Xá»­ lÃ½ quay láº¡i trang trÆ°á»›c
    ipcMain.on("go-back", () => {
        if (historyStack.length > 1) {
            historyStack.pop(); // XÃ³a trang hiá»‡n táº¡i khá»i stack
            const prevPage = historyStack[historyStack.length - 1]; // Láº¥y trang trÆ°á»›c Ä‘Ã³
            mainWindow.loadFile(prevPage);
        }
    });
    ipcMain.on("logout", () => {
        historyStack = [];
        mainWindow.loadFile('views/login.html');
    });
    app.on('window-all-closed', () => {
        if (process.platform !== 'darwin') {
            app.quit();
        }
    });
});
